<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highest_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Simulado.HighestScoreActivity">


    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="107dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/textScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/voltar_id"
        android:background="@android:color/holo_orange_dark"
        android:hint="hghg"
        android:paddingLeft="15dp"
        android:text="Acertos: 4 questões"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textHighScore"
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_light"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textScore"
        android:focusableInTouchMode="false"
        android:paddingLeft="15dp"
        android:text="Maior número de acertos: 4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="192dp"
        android:layout_height="51dp"

        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-141dp"
        android:background="@drawable/tentar"
        android:onClick="onClick"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/voltar_id"
        android:layout_width="345dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logooficial" />

    <Button
        android:id="@+id/button"
        android:layout_width="188dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:background="@drawable/irpara1"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/faaaaaace" />


</RelativeLayout>
