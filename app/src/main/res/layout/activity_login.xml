<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/fundocadastro"
    >


    <ImageView
        android:id="@+id/logologin"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_above="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10sp"
        app:srcCompat="@drawable/logologin" />


    <Button
        android:id="@+id/botaoentrar"
        android:layout_width="253dp"
        android:layout_height="57dp"
        android:layout_above="@+id/btn_facebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botaoentrar3" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="283dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/botaoentrar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="seuemail@dominio.com"
                android:maxLength="50"
                android:padding="10sp"
                android:id="@+id/rg_email"
                android:textSize="10sp"
                app:met_baseColor="#0056d3"
                app:met_errorColor="#ddaa00"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="E-mail"
                app:met_floatingLabelTextColor="@android:color/darker_gray"
                app:met_primaryColor="#982360"
                card_view:met_checkCharactersCountAtBeginning="true"
                card_view:met_iconRight="@drawable/ic_mensagem" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:id="@+id/rg_senha"
                android:layout_height="wrap_content"
                android:hint="Senha de Acesso"
                android:inputType="numberPassword"
                android:padding="10sp"
                android:textSize="10sp"
                app:met_baseColor="#0056d3"
                app:met_errorColor="#ddaa00"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Senha"
                app:met_floatingLabelTextColor="@android:color/darker_gray"
                app:met_primaryColor="#982360"
                card_view:met_iconRight="@drawable/ic_locker" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="128dp"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignTop="@+id/btn_google"
        android:background="@drawable/botaogoogle" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="128dp"
        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cardView"
        android:layout_marginBottom="72dp"
        android:background="@drawable/botaofacebook" />

    <TextView
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_toStartOf="@+id/btn_facebook"
        android:text="NÃ£o tem uma conta ?" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_facebook"
        android:layout_alignTop="@+id/txt_cadastrar"
        android:text="Cadastre-se"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold" />

</RelativeLayout>