<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".testeingles.QuizActivity"
    android:background="@drawable/fundoquiz">


    <TextView
        android:id="@+id/score"
        android:layout_width="132dp"

        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="52dp"
        android:layout_weight="0.11"
        android:text="1 de 10"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#e74a58" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="549dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/null"
            android:layout_centerHorizontal="true"
            android:fillViewport="false">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.97"
                android:fontFamily="@font/roboto_thin"
                android:padding="4dp"
                android:text="A vereadora do Rio de Janeiro Marielle Franco, assassinada em março deste ano, tinha projetos de lei que visavam proteger:"
                android:textColor="@color/perguntas"
                android:textSize="20sp"
                android:textStyle="bold" />
        </ScrollView>

        <Button
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="178dp"
            android:background="@drawable/botao_atualidades"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="Does"
            android:textColor="@color/nomeBotoes"
            android:textColorHighlight="#060505"
            android:textColorHint="#0a0909"
            android:textSize="10dp" />


        <Button
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="163dp"
            android:background="@drawable/botao_atualidades"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="Do"
            android:textColor="@color/nomeBotoes"
            android:textColorHighlight="#060505"
            android:textColorHint="#0a0909"
            android:textSize="10dp" />

        <Button
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="216dp"
            android:background="@drawable/botao_atualidades"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="Does"
            android:textColor="@color/nomeBotoes"
            android:textColorHighlight="#060505"
            android:textColorHint="#0a0909"
            android:textSize="10dp" />

        <Button
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="234dp"
            android:background="@drawable/botao_atualidades"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="Are"
            android:textColor="@color/nomeBotoes"
            android:textColorHighlight="@color/background_floating_material_light"
            android:textColorHint="#0a0909"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/linear_id"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/choice1"
            android:layout_marginTop="-178dp"
            android:orientation="vertical"
            android:padding="1dp"

            android:visibility="visible">

            <TextView
                android:id="@+id/resposta_text"
                android:layout_width="352dp"
                android:layout_height="103dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="62dp"
                android:fontFamily="@font/carme"
                android:padding="5dp"
                android:paddingTop="15dp"
                android:text="Marielle era uma defensora dos direitos humanos e seus projetos de lei visavam maior atenção do Estado sobre o assédio, cuidados com a educação, entre outros aspectos sociais."
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/leiaMais"
                android:layout_width="336dp"
                android:layout_height="26dp"
                android:layout_alignEnd="@+id/resposta_text"
                android:layout_below="@+id/resposta_text"
                android:layout_marginTop="-62dp"
                android:gravity="end"

                android:paddingRight="10dp"
                android:text="Leia Mais!"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="11sp" />

        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_avancar"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/botao3"
        android:text="PRÓXIMO"
        android:textColor="@android:color/white" />

</RelativeLayout>
